<div class = "container">
	<h1><%= @prop.author %> gives <%= @prop.recipient %> props for ...</h1>
	<div class="row">
<!-- Below is to put 2 gutters, like a version of margin: 0 auto -->
		<div class="col-md-3"></div>
		<div class="col-md-6">
			<div class="prop">
				<%= @prop.reason %>
			</div>
			<div class = "vanish">
				<%= link_to_if(@prop.author == current_user.username, "Edit this prop", edit_prop_path, class: "btn btn-primary") %>
				<%= link_to_if(@prop.author == current_user.username, "Delete this prop", { action: "destroy", id:@prop.id }, { method: :delete, data: { confirm: "Are you sure you want to delete this prop? People might get sad." }, class: "btn btn-danger" }) %>
			</div>
			<%= link_to "Back to the Props Board", props_path, class: "btn btn-info" %>
		</div>
		<div class="col-md-3"></div>		
	</div>
</div>
